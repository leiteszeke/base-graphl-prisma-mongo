    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.11.30",
    "@types/pino-multi-stream": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "pino-pretty": "^11.0.0",
